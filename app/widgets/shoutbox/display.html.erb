<section class="widget expanded" id="shoutbox">
  <header>
    <h1>Shoutbox</h1>
  </header>
  <section class="content">
    <% if @shouts and !@shouts.empty? %>
      <ul class="shouts">
        <% for shout in @shouts %>
          <li>
            <%= time_tag shout.created_at.localtime, shout.created_at.localtime.strftime("%H:%M"),  :pubdate => true %>
            <span class="user"><%= link_to shout.user.display_name, shout.user %></span>
            <span class="text"><%= shout.text %></span>
          </li>
        <% end %>
     </ul>
    <% else %>
        <p><%= _("Got something to say? Say it!") %></p>
    <% end %>
    <% if @show_form %>
      <%= form_tag url_for_event(:write), :remote => true do %>
        <%= text_field_tag 'text', nil,  :placeholder => _("Shout it here!")  %>
        <%= submit_tag _("Shout!") %>
      <% end %>
    <% else %>
      <aside class="note">If you sign in, you, too can shout!</aside>
    <% end %>
  </section>
</section>
