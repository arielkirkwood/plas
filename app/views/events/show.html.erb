<p id="notice"><%= notice %></p>

<dl class="event-info info-list">
  <fieldset>   
    <legend>Event Information</legend>
    <%=render :partial => 'events/tools'%>

    <dt><%= _('Name') %></dt>
    <dd><%= @event.name %></dd>

    <dt>Start</dt>
    <dd><%= @event.start %></dd>

    <dt>End</dt>
    <dd><%= @event.end %></dd>

    <dt>Description</dt>
    <dd><%= @event.description %></dd>
  </fieldset>

  <fieldset>
    <legend><%= _('Address') %></legend>

  <% @event.addresses.each do |address| %>
    <dt>Address</dt>
    <dd><%= address.pretty %></dd>
  <% end %>
  </fieldset>

  <fieldset>
    <legend><%= _('Options') %></legend>

    <dt>Registration Open</dt>
    <dd><%= @event.registration_open %></dd>

    <dt>Visible</dt>
    <dd><%= @event.visible %></dd>

  </fieldset>
</dl>

<p>
  <b>Tickets:</b>
  <% if @event.tickets.count == 0 %>
    <i>No tickets have been created for this event.</i>
  <% else %>
    <ul>
      <% @event.tickets.each do |t| %>
        <li><%= link_to t.name, event_ticket_path(@event, t) %> - $<%= "%.2f" % t.price %></li>
      <% end %>
    </ul>
  <% end %>
    <% if current_user and current_user.can 'events.administrate' %>
      (<%= link_to _('Create a ticket'), new_event_ticket_path(@event) %>)
    <% end %>
  
  </p>
<%= link_to 'Back', events_path %>
