<% if current_user and current_user.can 'events.administrate' %>
  <section id="event-admin-tools" class="admin-tools">
    <ul>
      <li><%= link_to _('Edit'), edit_event_path(@event), :class => 'icon edit' %></li>
      <li><%= link_to _('Delete'), @event, :confirm => 'Are you sure?', :method => :delete, :class => 'icon delete' %></li>
      <li><%= (current_event == @event) ? _("Current event") : link_to(_("Set current"), event_setcurrent_path(@event)) %></li>
    </ul>
  </section>
<% end %>

