<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start %><br/>
    <%= f.label :end %>
    <%= f.datetime_select :end %>
  </div>
	<div class="field">
<%#TODO: figure out why this damned form isn't rendering %>
	<%= f.fields_for :address do |af| %>
		<%= af.label :line1 %>
		<%= af.text_field :line1 %><br/>
		<%= af.label :line2 %>
		<%= af.text_field :line2 %><br/>
		<%= af.label :line3 %>
		<%= af.text_field :line3 %><br/>
		<%= af.label :neighborhood %> <%= af.text_field :neighborhood %><br/>
		<%= af.label :city %> <%= af.text_field :city %><br/>
		<%= af.label :region %> <%= af.text_field :region %><br/>
		<%= af.label :country %> <%= af.text_field :country %><br/>
		<%= af.label :postcode %> <%= af.text_field :postcode %><br/>
		<%= af.label :phone %> <%= af.telephone_field :phone %><br/>
		<%= af.label :type %> <%= af.select :type, Address::TYPES %>
		<%= af.hidden_field :primary, :value => true %>
	<% end %>
	</div>
  <div class="field">
    <%= f.label :registration_open %><br />
    <%= f.check_box :registration_open %>
  </div>
  <div class="field">
    <%= f.label :visible %><br />
    <%= f.check_box :visible, :checked_value => 1, :unchecked_value => 0, :checked => true%>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
