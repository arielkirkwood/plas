<% title =  _('Listing users') %>
<% content_for :title do %>
  <%=title %>
<% end %>

<h1><%=title %></h1>
<% if @users.count == 0 %>
  <p class="message">
    <%= _("There are no registered users in this system.") %>
  </p>
<% else %>
  <ul id="user-list">
    <% @users.each do |user| %>
      <li><%= link_to user.display_name, user %> </li>
    <% end %>
  </ul>
<% end %>
