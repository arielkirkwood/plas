<% title = _('Dashboard') %>
<% content_for :title do %>
  <%=title %>
<% end %>

<% if notice and not notice.empty? %>
  <p class="notice">
    <%= notice %>
  </p>
<% end %>

<h1><%= title %></h1>

<div id="dashboard">
  <div class="column" id="left">
    <%= render_widget :welcome %>
  </div>
  <div class="column" id="right">
    <%= render_widget :shoutbox %>
    <%= render_widget :opensource %>
  </div>
</div>
